<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onesphere_bolt_name_rules_config_settings_view_form" model="ir.ui.view">
        <field name="name">onesphere_bolt_name_rules_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id='about' position="before">
                <h2>Bolt Name and Entity ID Rules</h2>
                <div class="row mt16 o_settings_container" name="bolt_name_rules">
                    <div class="col-12 col-lg-6 o_setting_box" id="bolt_name_rules">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label for="bolt_name_rules" class="o_light_label"/>
                                <field name="bolt_name_rules"/>
                                <label for="entity_id_rules" class="o_light_label"/>
                                <field name="entity_id_rules"/>
                            </div>
                        </div>
                    </div>
                </div>

                <h2>Tightening Process Proposal</h2>
                <div class="row mt16 o_settings_container" name="tightening_process_proposal_duration">
                    <div class="col-12 col-lg-6 o_setting_box" id="tightening_process_proposal_duration">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label for="tightening_process_proposal_duration" class="o_light_label"/>
                                <field name="tightening_process_proposal_duration"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>


